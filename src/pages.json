{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
       "^u-(.*)": "uview-plus/components/u-$1/u-$1.vue" 
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationStyle": "custom",
        "mp-alipay": {
          "transparentTitle": "always",
          "titlePenetrate": "YES"
        }
      }
    },
    {
      "path": "pages/my/my",
      "style": {
        "navigationBarTitleText": "个人中心",
        "navigationBarBackgroundColor": "#4974F5",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录",
        "navigationBarBackgroundColor": "#fff",
        "navigationBarTextStyle": "#000"
      }
    }
  ],
  "subPackages": [],
  "globalStyle": {
   "navigationBarTextStyle": "white"
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#4974F5",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "主页",
        "iconPath": "static/image/tabbar/tabbar_ic_home.png",
        "selectedIconPath": "static/image/tabbar/tabbar_ic_home_pre.png"
      },
      {
        "pagePath": "pages/my/my",
        "text": "我的",
        "iconPath": "static/image/tabbar/tabbar_ic_personal.png",
        "selectedIconPath": "static/image/tabbar/tabbar_ic_personal_pre.png"
      }
    ]
  }
}
